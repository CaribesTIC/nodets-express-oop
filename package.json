{
  "name": "curso-node-ts",
  "version": "1.0.0",
  "description": "Curso Nodejs con TypeScript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && node dist/server.js",
